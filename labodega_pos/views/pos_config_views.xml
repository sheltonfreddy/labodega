<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_inherit_magellan" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.magellan</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Add POS Type field in basic settings -->
            <xpath expr="//field[@name='name']/.." position="after">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                    <label for="pos_type" string="POS Type"/>
                    <div class="text-muted">
                        Determines which product categories are shown in this POS
                    </div>
                    <div class="content-group">
                        <div class="mt-2">
                            <field name="pos_type" widget="radio" options="{'horizontal': true}"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <!-- Add User Access Restriction -->
            <xpath expr="//field[@name='name']/../.." position="after">
                <div class="o_setting_left_pane">
                    <field name="restrict_user_access"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="restrict_user_access" string="Restrict User Access"/>
                    <div class="text-muted">
                        Only allow specific users to open this POS terminal
                    </div>
                    <div class="content-group" invisible="not restrict_user_access">
                        <div class="mt-2">
                            <label for="allowed_user_ids" string="Allowed Users"/>
                            <field name="allowed_user_ids" widget="many2many_tags"
                                   options="{'no_create': True}"
                                   placeholder="Select users who can access this terminal..."/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting id="magellan_scanner" string="Magellan Scale/Scanner"
                         help="Configure Raspberry Pi bridge for Magellan scale and barcode scanner">
                    <div class="content-group">
                        <div class="row mt-2">
                            <label for="magellan_bridge_url" class="col-lg-4 o_light_label"/>
                            <field name="magellan_bridge_url"
                                   class="col-lg-8"
                                   placeholder="https://10.0.0.34:8000"/>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12 text-muted">
                                <small>
                                    <i class="fa fa-info-circle"/> Enter the URL of the Raspberry Pi bridge for this terminal.<br/>
                                    <strong>Format:</strong> https://[IP_ADDRESS]:8000<br/>
                                    <strong>Examples:</strong><br/>
                                    • Home network: https://10.0.0.34:8000<br/>
                                    • Store network: https://172.16.19.185:8000<br/>
                                    <br/>
                                    <strong>Multi-Terminal Setup:</strong> Each POS terminal can have its own scale/scanner.<br/>
                                    Leave empty to use the fallback default configured in the module.
                                </small>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

    <!-- Add pos_type to pos.category form view -->
    <record id="view_pos_category_form_inherit_pos_type" model="ir.ui.view">
        <field name="name">pos.category.form.inherit.pos_type</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="pos_type"/>
            </xpath>
        </field>
    </record>

    <!-- Add pos_type to pos.category list/tree view -->
    <record id="view_pos_category_tree_inherit_pos_type" model="ir.ui.view">
        <field name="name">pos.category.tree.inherit.pos_type</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="pos_type"/>
            </xpath>
        </field>
    </record>
</odoo>

