<odoo>
    <data>
        <!-- Load Magellan Scale Service and Compact Receipt Assets -->
        <template id="assets_pos_magellan" inherit_id="point_of_sale._assets_pos">
            <xpath expr="." position="inside">
                <!-- Load config FIRST (it's a dependency) -->
                <script type="text/javascript"
                        src="/labodega_pos/static/src/js/magellan_config.js"/>

                <!-- Then load the scale/barcode service that imports config -->
                <script type="text/javascript"
                        src="/labodega_pos/static/src/js/magellan_scale_service.js"/>

                <!-- Compact Receipt CSS -->
                <link rel="stylesheet" type="text/css"
                      href="/labodega_pos/static/src/css/compact_receipt.css"/>
            </xpath>
        </template>
    </data>
</odoo>
