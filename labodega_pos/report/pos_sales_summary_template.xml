<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_pos_sales_summary" model="ir.actions.report">
        <field name="name">POS Sales Summary</field>
        <field name="model">pos.sales.summary.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">labodega_pos.report_pos_sales_summary</field>
        <field name="report_file">labodega_pos.report_pos_sales_summary</field>
        <field name="binding_model_id" ref="model_pos_sales_summary_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_pos_sales_summary">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">POS Sales Summary Report</h2>
                        <p class="text-center text-muted">Generated: <t t-esc="doc.report_date"/></p>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>Today Summary</h3>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Total Sales:</strong></td>
                                        <td class="text-end"><t t-esc="doc.total_sales_today" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Total Orders:</strong></td>
                                        <td class="text-end"><t t-esc="doc.total_orders_today"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Total Refunds:</strong></td>
                                        <td class="text-end"><t t-esc="doc.total_refunds_today" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>Sessions Today</h3>
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>Session</th>
                                            <th>POS</th>
                                            <th>User</th>
                                            <th>Status</th>
                                            <th class="text-end">Orders</th>
                                            <th class="text-end">Sales</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.session_line_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.session_name"/></td>
                                                <td><t t-esc="line.config_name"/></td>
                                                <td><t t-esc="line.user_name"/></td>
                                                <td><t t-esc="line.state"/></td>
                                                <td class="text-end"><t t-esc="line.total_orders"/></td>
                                                <td class="text-end"><t t-esc="line.total_sales" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>Top 20 Products Today</h3>
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product</th>
                                            <th class="text-end">Qty</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.top_products_today_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.rank"/></td>
                                                <td><t t-esc="line.product_name"/></td>
                                                <td class="text-end"><t t-esc="line.total_qty"/></td>
                                                <td class="text-end"><t t-esc="line.total_amount" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div style="page-break-before: always;"/>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>Top 20 Products - <t t-esc="doc.month_name"/></h3>
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product</th>
                                            <th class="text-end">Qty</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.top_products_month_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.rank"/></td>
                                                <td><t t-esc="line.product_name"/></td>
                                                <td class="text-end"><t t-esc="line.total_qty"/></td>
                                                <td class="text-end"><t t-esc="line.total_amount" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>Top 20 Products - <t t-esc="doc.year_name"/></h3>
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product</th>
                                            <th class="text-end">Qty</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.top_products_year_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.rank"/></td>
                                                <td><t t-esc="line.product_name"/></td>
                                                <td class="text-end"><t t-esc="line.total_qty"/></td>
                                                <td class="text-end"><t t-esc="line.total_amount" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

