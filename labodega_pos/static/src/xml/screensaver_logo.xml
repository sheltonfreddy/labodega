<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Customize POS Screensaver to show Company Logo instead of Odoo logo -->
    <t t-name="point_of_sale.SaverScreen" t-inherit="point_of_sale.SaverScreen" t-inherit-mode="extension">

        <!-- Replace the Odoo logo with company logo -->
        <xpath expr="//img[@src='/web/static/img/odoo_logo.svg']" position="replace">
            <img t-att-height="env.isSmall ? 80 : 200"
                 t-attf-src="/web/image?model=res.company&amp;id={{pos.company.id}}&amp;field=logo"
                 alt="Company Logo"
                 class="screensaver-logo" />
        </xpath>

    </t>

</templates>

