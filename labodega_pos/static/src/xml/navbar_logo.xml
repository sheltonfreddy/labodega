<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Customize POS Navbar Logo to use Company Logo -->
    <t t-name="point_of_sale.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">

        <!-- Replace the default Odoo logo with company logo -->
        <xpath expr="//img[hasclass('pos-logo')]" position="replace">
            <img class="pos-logo labodega-logo mw-100"
                 height="50"
                 t-on-click="() => debug.toggleWidget()"
                 t-attf-src="/web/image?model=res.company&amp;id={{pos.company.id}}&amp;field=logo"
                 alt="Company Logo" />
        </xpath>

    </t>

</templates>

