<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_product_import_wizard_form" model="ir.ui.view">
        <field name="name">product.import.wizard.form</field>
        <field name="model">product.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Products from CSV">
                <group invisible="state != 'draft'">
                    <group string="CSV File">
                        <field name="csv_file" filename="csv_filename" widget="binary"/>
                        <field name="csv_filename" invisible="1"/>
                    </group>
                    <group string="Vendor Information">
                        <field name="vendor_name"/>
                    </group>
                    <group string="Update Options" col="2">
                        <field name="skip_existing_barcode"/>
                        <field name="update_name"/>
                        <field name="update_cost"/>
                        <field name="update_sale_price"/>
                        <field name="update_purchase_desc"/>
                        <field name="update_category"/>
                        <field name="update_pos_category"/>
                        <field name="create_new_products"/>
                    </group>
                </group>
                <group invisible="state != 'done'">
                    <field name="result_message" widget="text" readonly="1" nolabel="1"/>
                </group>
                <field name="state" invisible="1"/>
                <footer>
                    <button name="action_import" string="Import Products" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_reset" string="Import Another File" type="object"
                            class="btn-primary" invisible="state != 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_product_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Products from CSV</field>
        <field name="res_model">product.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item under Inventory -->
    <menuitem id="menu_product_import_wizard"
              name="Import Products (CSV)"
              parent="stock.menu_stock_config_settings"
              action="action_product_import_wizard"
              sequence="100"/>

    <!-- Also add to Products menu for easy access -->
    <menuitem id="menu_product_import_wizard_products"
              name="Import Products (CSV)"
              parent="stock.menu_stock_inventory_control"
              action="action_product_import_wizard"
              sequence="100"/>

</odoo>


