<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Label Report Paperformat -->
    <!-- Sheet: Letter size (215.9mm x 279.4mm) -->
    <!-- Labels: 50mm x 30mm, 4 columns x 8 rows = 32 labels per sheet -->
    <!-- Layout: 5mm | 50mm | 2mm | 50mm | 2mm | 50mm | 2mm | 50mm | 5mm = 216mm -->
    <!-- Vertical: 15mm top | (30mm + 2mm) x 8 rows | 20mm bottom -->
    <record id="paperformat_product_labels" model="report.paperformat">
        <field name="name">Product Labels (5x3cm, 32 per sheet)</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Product Label Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_csv_import.report_product_labels</field>
        <field name="report_file">product_csv_import.report_product_labels</field>
        <field name="print_report_name">'Product_Labels'</field>
        <field name="paperformat_id" ref="paperformat_product_labels"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <div class="article">
                <style>
                    @page {
                        size: 216mm 279mm;
                        margin: 15mm 5mm 20mm 5mm;
                    }
                    * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                    }
                    body {
                        margin: 0;
                        padding: 0;
                        font-family: 'Arial Black', 'Helvetica Neue', Arial, sans-serif;
                    }
                    .label-table {
                        width: 206mm;
                        border-collapse: collapse;
                        table-layout: fixed;
                        border-spacing: 0;
                    }
                    .label-table col.label-col {
                        width: 50mm;
                    }
                    .label-table col.gap-col {
                        width: 2mm;
                    }
                    .label-table tr {
                        height: 30mm;
                    }
                    .label-table tr.gap-row {
                        height: 2mm;
                    }
                    .label-table tr.gap-row td {
                        height: 2mm;
                        padding: 0;
                        border: none;
                    }
                    .label-table td {
                        padding: 0;
                        vertical-align: top;
                        overflow: visible;
                    }
                    .label-table td.gap-cell {
                        width: 2mm;
                        padding: 0;
                    }
                    .label-box {
                        width: 50mm;
                        height: 30mm;
                        overflow: hidden;
                        border: 0.2pt dashed #ccc;
                    }
                    /* Top section - 10mm for product name */
                    .label-top {
                        width: 50mm;
                        height: 10mm;
                        padding: 1mm 2mm;
                        overflow: hidden;
                    }
                    .product-name {
                        font-size: 8pt;
                        font-weight: 900;
                        text-align: center;
                        line-height: 1.1;
                        text-transform: uppercase;
                        color: #000;
                        max-height: 8mm;
                        overflow: hidden;
                        word-wrap: break-word;
                    }
                    /* Bottom section - 20mm for barcode and price */
                    .label-bottom {
                        width: 50mm;
                        height: 20mm;
                        padding: 1mm;
                        position: relative;
                    }
                    .barcode-area {
                        width: 32mm;
                        display: inline-block;
                        text-align: center;
                        vertical-align: top;
                    }
                    .barcode-area img {
                        width: 30mm;
                        height: 10mm;
                    }
                    .barcode-text {
                        font-size: 6pt;
                        font-weight: bold;
                        text-align: center;
                        font-family: 'Courier New', monospace;
                        color: #000;
                        margin-top: 0.5mm;
                    }
                    .price-area {
                        position: absolute;
                        bottom: 1mm;
                        right: 1mm;
                        text-align: right;
                    }
                    .price {
                        font-size: 20pt;
                        font-weight: 900;
                        color: #000;
                        line-height: 1;
                        white-space: nowrap;
                    }
                    .price-currency {
                        font-size: 12pt;
                    }
                    .price-cents {
                        font-size: 12pt;
                        vertical-align: top;
                        position: relative;
                        top: -4pt;
                    }
                    .no-barcode {
                        font-size: 7pt;
                        color: #333;
                        text-align: center;
                        font-style: italic;
                        padding-top: 4mm;
                    }
                    .page-break {
                        page-break-before: always;
                    }
                </style>

                <t t-set="products_list" t-value="list(docs)"/>
                <t t-set="total_products" t-value="len(products_list)"/>

                <table class="label-table">
                    <colgroup>
                        <col class="label-col"/>
                        <col class="gap-col"/>
                        <col class="label-col"/>
                        <col class="gap-col"/>
                        <col class="label-col"/>
                        <col class="gap-col"/>
                        <col class="label-col"/>
                    </colgroup>
                    <t t-foreach="range(0, total_products, 4)" t-as="start_idx">
                        <!-- Page break after every 32 labels (8 rows) -->
                        <t t-if="start_idx > 0 and start_idx % 32 == 0">
                            <tr class="page-break"><td colspan="7" style="height:0;padding:0;">&#160;</td></tr>
                        </t>

                        <tr>
                            <!-- Label 1 -->
                            <td>
                                <t t-if="start_idx &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom">
                                            <div class="barcode-area">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-area">
                                                <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>
                            <td class="gap-cell"/>

                            <!-- Label 2 -->
                            <td>
                                <t t-if="start_idx + 1 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 1]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom">
                                            <div class="barcode-area">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-area">
                                                <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>
                            <td class="gap-cell"/>

                            <!-- Label 3 -->
                            <td>
                                <t t-if="start_idx + 2 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 2]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom">
                                            <div class="barcode-area">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-area">
                                                <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>
                            <td class="gap-cell"/>

                            <!-- Label 4 -->
                            <td>
                                <t t-if="start_idx + 3 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 3]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom">
                                            <div class="barcode-area">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-area">
                                                <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>
                        </tr>

                        <!-- Vertical gap row (except for last row on page or last row of data) -->
                        <t t-set="is_last_row" t-value="start_idx + 4 >= total_products or (start_idx + 4) % 32 == 0"/>
                        <t t-if="not is_last_row">
                            <tr class="gap-row"><td colspan="7"/></tr>
                        </t>
                    </t>
                </table>
            </div>
        </t>
    </template>
</odoo>

