<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Label Report Paperformat -->
    <!-- Sheet: Letter size (215.9mm x 279.4mm) -->
    <!-- Labels: 50mm x 30mm, 4 columns x 8 rows = 32 labels per sheet -->
    <!-- Top margin: 15mm, Bottom: 20mm, Left: 5mm, Right: 5mm -->
    <!-- Horizontal gap: 2mm, Vertical gap: 2mm -->
    <record id="paperformat_product_labels" model="report.paperformat">
        <field name="name">Product Labels (5x3cm, 32 per sheet)</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Product Label Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_csv_import.report_product_labels</field>
        <field name="report_file">product_csv_import.report_product_labels</field>
        <field name="print_report_name">'Product_Labels'</field>
        <field name="paperformat_id" ref="paperformat_product_labels"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <div class="article">
                <style>
                    @page {
                        size: 216mm 279mm;
                        margin: 15mm 3mm 20mm 3mm;
                    }
                    * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                    }
                    body {
                        margin: 0;
                        padding: 0;
                        font-family: 'Arial Black', 'Helvetica Neue', Arial, sans-serif;
                    }
                    .label-table {
                        width: 210mm;
                        border-collapse: separate;
                        border-spacing: 2mm;
                        table-layout: fixed;
                        margin: 0;
                    }
                    .label-table td {
                        width: 50mm;
                        height: 30mm;
                        padding: 0;
                        overflow: hidden;
                        vertical-align: top;
                        border: 0.3pt solid #ccc;
                    }
                    .label-box {
                        width: 100%;
                        height: 30mm;
                        display: block;
                    }
                    /* Top section - WHITE - 10mm for product name */
                    .label-top {
                        width: 100%;
                        height: 10mm;
                        background-color: #ffffff;
                        padding: 1mm 2mm;
                        display: block;
                        overflow: hidden;
                    }
                    .product-name {
                        font-size: 8pt;
                        font-weight: 900;
                        text-align: center;
                        line-height: 1.1;
                        text-transform: uppercase;
                        color: #000;
                        max-height: 8mm;
                        overflow: hidden;
                        word-wrap: break-word;
                    }
                    /* Bottom section - YELLOW - 20mm for barcode and price */
                    .label-bottom {
                        width: 100%;
                        height: 20mm;
                        background-color: #ffeb3b;
                        padding: 1mm 2mm;
                        display: block;
                        position: relative;
                    }
                    .barcode-container {
                        text-align: center;
                        width: 70%;
                        float: left;
                    }
                    .barcode-container img {
                        width: 32mm;
                        height: 10mm;
                    }
                    .barcode-text {
                        font-size: 6pt;
                        font-weight: bold;
                        text-align: center;
                        font-family: 'Courier New', monospace;
                        color: #000;
                        margin-top: 0.5mm;
                    }
                    .price-box {
                        width: 30%;
                        float: right;
                        text-align: right;
                        padding-right: 1mm;
                        padding-top: 2mm;
                    }
                    .price {
                        font-size: 22pt;
                        font-weight: 900;
                        text-align: right;
                        color: #000;
                        line-height: 1;
                    }
                    .price-currency {
                        font-size: 12pt;
                        vertical-align: super;
                    }
                    .price-cents {
                        font-size: 12pt;
                        vertical-align: super;
                    }
                    .no-barcode {
                        font-size: 7pt;
                        color: #333;
                        text-align: center;
                        font-style: italic;
                        padding-top: 4mm;
                    }
                    .clearfix::after {
                        content: "";
                        display: table;
                        clear: both;
                    }
                    tr {
                        page-break-inside: avoid;
                    }
                </style>

                <t t-set="products_list" t-value="list(docs)"/>
                <t t-set="total_products" t-value="len(products_list)"/>

                <table class="label-table">
                    <t t-foreach="range(0, total_products, 4)" t-as="start_idx">
                        <!-- Page break after every 32 labels (8 rows) -->
                        <t t-if="start_idx > 0 and start_idx % 32 == 0">
                            <tr style="page-break-before: always;"><td colspan="4" style="height:0; padding:0; border:none;">&#160;</td></tr>
                        </t>

                        <tr>
                            <!-- Label 1 -->
                            <td>
                                <t t-if="start_idx &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom clearfix">
                                            <div class="barcode-container">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-box">
                                                <div class="price">
                                                    <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>

                            <!-- Label 2 -->
                            <td>
                                <t t-if="start_idx + 1 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 1]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom clearfix">
                                            <div class="barcode-container">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-box">
                                                <div class="price">
                                                    <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>

                            <!-- Label 3 -->
                            <td>
                                <t t-if="start_idx + 2 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 2]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom clearfix">
                                            <div class="barcode-container">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-box">
                                                <div class="price">
                                                    <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>

                            <!-- Label 4 -->
                            <td>
                                <t t-if="start_idx + 3 &lt; total_products">
                                    <t t-set="product" t-value="products_list[start_idx + 3]"/>
                                    <div class="label-box">
                                        <div class="label-top">
                                            <div class="product-name"><t t-esc="product.name"/></div>
                                        </div>
                                        <div class="label-bottom clearfix">
                                            <div class="barcode-container">
                                                <t t-if="product.barcode">
                                                    <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                    <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                                </t>
                                                <t t-else="">
                                                    <div class="no-barcode">NO BARCODE</div>
                                                </t>
                                            </div>
                                            <div class="price-box">
                                                <div class="price">
                                                    <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>
</odoo>

