<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Label Report Paperformat -->
    <!-- Sheet: Letter size (215.9mm x 279.4mm) -->
    <!-- Labels: 50mm x 30mm, 4 columns x 8 rows = 32 labels per sheet -->
    <!-- Layout: 5mm | 50mm | 2mm | 50mm | 2mm | 50mm | 2mm | 50mm | 5mm = 216mm -->
    <record id="paperformat_product_labels" model="report.paperformat">
        <field name="name">Product Labels (5x3cm, 32 per sheet)</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">11</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">1</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
        <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- Product Label Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_csv_import.report_product_labels</field>
        <field name="report_file">product_csv_import.report_product_labels</field>
        <field name="print_report_name">'Product_Labels'</field>
        <field name="paperformat_id" ref="paperformat_product_labels"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <div class="article">
                <style>
                    @page {
                        size: 216mm 279mm;
                        margin: 11mm 5mm 20mm 0mm;
                    }
                    * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                        -webkit-print-color-adjust: exact !important;
                        print-color-adjust: exact !important;
                    }
                    html {
                        /* Zoom factor to compensate for wkhtmltopdf rendering - adjust if needed */
                        zoom: 1.0;
                    }
                    body {
                        margin: 0;
                        padding: 0;
                        font-family: 'Arial Black', 'Helvetica Neue', Arial, sans-serif;
                        width: 206mm;
                    }
                    .page-container {
                        width: 206mm;
                        position: relative;
                    }
                    .label-row {
                        width: 206mm;
                        height: 27mm;
                        margin-bottom: 0mm;
                        position: relative;
                        page-break-inside: avoid;
                        clear: both;
                    }
                    .label-row:nth-child(8n) {
                        margin-bottom: 0;
                    }
                    /* Position each label using float instead of absolute */
                    .label-box {
                        float: left;
                        width: 50mm !important;
                        min-width: 50mm !important;
                        max-width: 50mm !important;
                        height: 27mm !important;
                        min-height: 27mm !important;
                        max-height: 27mm !important;
                        overflow: hidden;
                        border: 0.5pt dashed #ccc;
                        margin-right: 2mm;
                    }
                    .label-box:last-child {
                        margin-right: 0;
                    }
                    .label-box.no-margin {
                        margin-right: 0;
                    }

                    /* Top section - 9mm for product name */
                    .label-top {
                        width: 50mm !important;
                        height: 9mm !important;
                        padding: 1mm 2mm;
                        overflow: hidden;
                    }
                    .product-name {
                        font-size: 7pt;
                        font-weight: 900;
                        text-align: center;
                        line-height: 1.1;
                        text-transform: uppercase;
                        color: #000;
                        max-height: 7mm;
                        overflow: hidden;
                        word-wrap: break-word;
                    }
                    /* Bottom section - 18mm for barcode and price */
                    .label-bottom {
                        width: 50mm !important;
                        height: 18mm !important;
                        padding: 1mm;
                        position: relative;
                        overflow: hidden;
                    }
                    .barcode-area {
                        width: 32mm;
                        display: inline-block;
                        text-align: center;
                        vertical-align: top;
                    }
                    .barcode-area img {
                        width: 30mm;
                        height: 10mm;
                    }
                    .barcode-text {
                        font-size: 6pt;
                        font-weight: bold;
                        text-align: center;
                        font-family: 'Courier New', monospace;
                        color: #000;
                        margin-top: 0.5mm;
                    }
                    .price-area {
                        position: absolute;
                        bottom: 1mm;
                        right: 2mm;
                        text-align: right;
                    }
                    .price {
                        font-size: 18pt;
                        font-weight: 900;
                        color: #000;
                        line-height: 1;
                        white-space: nowrap;
                    }
                    .price-currency {
                        font-size: 11pt;
                    }
                    .price-cents {
                        font-size: 11pt;
                        vertical-align: top;
                        position: relative;
                        top: -3pt;
                    }
                    .no-barcode {
                        font-size: 7pt;
                        color: #333;
                        text-align: center;
                        font-style: italic;
                        padding-top: 4mm;
                    }
                    .page-break {
                        page-break-before: always;
                    }
                </style>

                <t t-set="products_list" t-value="list(docs)"/>
                <t t-set="total_products" t-value="len(products_list)"/>

                <div class="page-container">
                    <t t-foreach="range(0, total_products, 4)" t-as="start_idx">
                        <!-- Page break after every 32 labels (8 rows) -->
                        <t t-if="start_idx > 0 and start_idx % 32 == 0">
                            <div class="page-break"/>
                        </t>

                        <div class="label-row">
                            <!-- Label 1 -->
                            <t t-if="start_idx &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx]"/>
                                <div class="label-box">
                                    <div class="label-top">
                                        <div class="product-name"><t t-esc="product.name"/></div>
                                    </div>
                                    <div class="label-bottom">
                                        <div class="barcode-area">
                                            <t t-if="product.barcode">
                                                <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                            </t>
                                            <t t-else="">
                                                <div class="no-barcode">NO BARCODE</div>
                                            </t>
                                        </div>
                                        <div class="price-area">
                                            <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                        </div>
                                    </div>
                                </div>
                            </t>

                            <!-- Label 2 -->
                            <t t-if="start_idx + 1 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 1]"/>
                                <div class="label-box">
                                    <div class="label-top">
                                        <div class="product-name"><t t-esc="product.name"/></div>
                                    </div>
                                    <div class="label-bottom">
                                        <div class="barcode-area">
                                            <t t-if="product.barcode">
                                                <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                            </t>
                                            <t t-else="">
                                                <div class="no-barcode">NO BARCODE</div>
                                            </t>
                                        </div>
                                        <div class="price-area">
                                            <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                        </div>
                                    </div>
                                </div>
                            </t>

                            <!-- Label 3 -->
                            <t t-if="start_idx + 2 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 2]"/>
                                <div class="label-box">
                                    <div class="label-top">
                                        <div class="product-name"><t t-esc="product.name"/></div>
                                    </div>
                                    <div class="label-bottom">
                                        <div class="barcode-area">
                                            <t t-if="product.barcode">
                                                <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                            </t>
                                            <t t-else="">
                                                <div class="no-barcode">NO BARCODE</div>
                                            </t>
                                        </div>
                                        <div class="price-area">
                                            <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                        </div>
                                    </div>
                                </div>
                            </t>

                            <!-- Label 4 -->
                            <t t-if="start_idx + 3 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 3]"/>
                                <div class="label-box no-margin">
                                    <div class="label-top">
                                        <div class="product-name"><t t-esc="product.name"/></div>
                                    </div>
                                    <div class="label-bottom">
                                        <div class="barcode-area">
                                            <t t-if="product.barcode">
                                                <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=250&amp;height=60&amp;humanreadable=0"/>
                                                <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                            </t>
                                            <t t-else="">
                                                <div class="no-barcode">NO BARCODE</div>
                                            </t>
                                        </div>
                                        <div class="price-area">
                                            <div class="price"><span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span></div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>

