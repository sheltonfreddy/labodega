<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Label Report Paperformat -->
    <!-- Sheet: Letter size (8.5" x 11" = 215.9mm x 279.4mm) -->
    <!-- Labels: 5cm x 3cm, 4 columns x 8 rows = 32 labels -->
    <!-- Top margin: 1mm, Bottom: 2cm, Left: 0.5cm, Right: 0.5cm -->
    <!-- Horizontal gap: 4mm, Vertical gap: 2mm -->
    <record id="paperformat_product_labels" model="report.paperformat">
        <field name="name">Product Labels (5x3cm, 32 per sheet)</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Product Label Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_csv_import.report_product_labels</field>
        <field name="report_file">product_csv_import.report_product_labels</field>
        <field name="print_report_name">'Product_Labels'</field>
        <field name="paperformat_id" ref="paperformat_product_labels"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template - Main entry point -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <div class="article">
                <!--
                    Letter sheet: 216mm x 279mm
                    Margins: Top 15mm, Bottom 20mm, Left 5mm, Right 5mm
                    Available width: 216 - 5 - 5 = 206mm
                    Available height: 279 - 15 - 20 = 244mm

                    Labels: 50mm x 30mm (4 columns x 8 rows = 32 per sheet)
                    Horizontal gaps: 2mm x 3 = 6mm
                    Vertical gaps: 2mm x 7 = 14mm

                    Total width needed: (50 x 4) + (2 x 3) = 206mm âœ“
                    Total height needed: (30 x 8) + (2 x 7) = 254mm (will use 244mm available)
                -->
                <style>
                    @page {
                        size: 216mm 279mm;
                        margin: 15mm 5mm 20mm 5mm;
                    }
                    * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                    }
                    body {
                        margin: 0;
                        padding: 0;
                        font-family: 'Arial Black', 'Helvetica Neue', Arial, sans-serif;
                    }
                    .label-sheet {
                        width: 206mm;
                    }
                    .label-row {
                        width: 206mm;
                        height: 30mm;
                        margin-bottom: 2mm;
                        page-break-inside: avoid;
                        display: flex;
                        flex-direction: row;
                        justify-content: flex-start;
                        align-items: stretch;
                    }
                    .label-row:last-child {
                        margin-bottom: 0;
                    }
                    .label-cell {
                        width: 50mm;
                        min-width: 50mm;
                        max-width: 50mm;
                        height: 30mm;
                        min-height: 30mm;
                        max-height: 30mm;
                        padding: 1.5mm;
                        border: 0.2pt dashed #bbb;
                        overflow: hidden;
                        background: #fff;
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between;
                        align-items: center;
                    }
                    .label-spacer {
                        width: 2mm;
                        min-width: 2mm;
                        max-width: 2mm;
                        height: 30mm;
                    }
                    .product-name {
                        width: 100%;
                        font-size: 8pt;
                        font-weight: 900;
                        text-align: center;
                        line-height: 1.1;
                        max-height: 10mm;
                        overflow: hidden;
                        word-wrap: break-word;
                        text-transform: uppercase;
                        color: #000;
                    }
                    .barcode-container {
                        width: 100%;
                        text-align: center;
                        flex-grow: 1;
                        display: flex;
                        flex-direction: column;
                        justify-content: center;
                        align-items: center;
                    }
                    .barcode-container img {
                        width: 46mm;
                        height: 9mm;
                    }
                    .barcode-text {
                        font-size: 6pt;
                        font-weight: bold;
                        text-align: center;
                        margin-top: 0.5mm;
                        font-family: 'Courier New', monospace;
                        letter-spacing: 0.5pt;
                        color: #000;
                    }
                    .price {
                        font-size: 14pt;
                        font-weight: 900;
                        text-align: center;
                        color: #000;
                        line-height: 1;
                    }
                    .price-currency {
                        font-size: 9pt;
                        vertical-align: super;
                    }
                    .price-cents {
                        font-size: 9pt;
                        vertical-align: super;
                    }
                    .no-barcode {
                        font-size: 7pt;
                        color: #666;
                        text-align: center;
                        font-style: italic;
                    }
                    .page-break {
                        page-break-before: always;
                        height: 0;
                    }
                </style>

                <div class="label-sheet">
                    <t t-set="products_list" t-value="list(docs)"/>
                    <t t-set="total_products" t-value="len(products_list)"/>

                    <t t-foreach="range(0, total_products, 4)" t-as="start_idx">
                        <!-- Page break after every 32 labels (8 rows) -->
                        <t t-if="start_idx > 0 and start_idx % 32 == 0">
                            <div class="page-break"/>
                        </t>

                        <div class="label-row">
                            <!-- Label 1 -->
                            <t t-if="start_idx &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx]"/>
                                <div class="label-cell">
                                    <div class="product-name"><t t-esc="product.name"/></div>
                                    <div class="barcode-container">
                                        <t t-if="product.barcode">
                                            <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=300&amp;height=50&amp;humanreadable=0"/>
                                            <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                        </t>
                                        <t t-else="">
                                            <div class="no-barcode">NO BARCODE</div>
                                        </t>
                                    </div>
                                    <div class="price">
                                        <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                    </div>
                                </div>
                            </t>

                            <!-- Spacer 1 -->
                            <t t-if="start_idx + 1 &lt; total_products">
                                <div class="label-spacer"/>
                            </t>

                            <!-- Label 2 -->
                            <t t-if="start_idx + 1 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 1]"/>
                                <div class="label-cell">
                                    <div class="product-name"><t t-esc="product.name"/></div>
                                    <div class="barcode-container">
                                        <t t-if="product.barcode">
                                            <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=300&amp;height=50&amp;humanreadable=0"/>
                                            <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                        </t>
                                        <t t-else="">
                                            <div class="no-barcode">NO BARCODE</div>
                                        </t>
                                    </div>
                                    <div class="price">
                                        <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                    </div>
                                </div>
                            </t>

                            <!-- Spacer 2 -->
                            <t t-if="start_idx + 2 &lt; total_products">
                                <div class="label-spacer"/>
                            </t>

                            <!-- Label 3 -->
                            <t t-if="start_idx + 2 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 2]"/>
                                <div class="label-cell">
                                    <div class="product-name"><t t-esc="product.name"/></div>
                                    <div class="barcode-container">
                                        <t t-if="product.barcode">
                                            <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=300&amp;height=50&amp;humanreadable=0"/>
                                            <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                        </t>
                                        <t t-else="">
                                            <div class="no-barcode">NO BARCODE</div>
                                        </t>
                                    </div>
                                    <div class="price">
                                        <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                    </div>
                                </div>
                            </t>

                            <!-- Spacer 3 -->
                            <t t-if="start_idx + 3 &lt; total_products">
                                <div class="label-spacer"/>
                            </t>

                            <!-- Label 4 -->
                            <t t-if="start_idx + 3 &lt; total_products">
                                <t t-set="product" t-value="products_list[start_idx + 3]"/>
                                <div class="label-cell">
                                    <div class="product-name"><t t-esc="product.name"/></div>
                                    <div class="barcode-container">
                                        <t t-if="product.barcode">
                                            <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{product.barcode}}&amp;width=300&amp;height=50&amp;humanreadable=0"/>
                                            <div class="barcode-text"><t t-esc="product.barcode"/></div>
                                        </t>
                                        <t t-else="">
                                            <div class="no-barcode">NO BARCODE</div>
                                        </t>
                                    </div>
                                    <div class="price">
                                        <span class="price-currency">$</span><t t-esc="int(product.list_price)"/><span class="price-cents"><t t-esc="'%02d' % int(round((product.list_price % 1) * 100))"/></span>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>


